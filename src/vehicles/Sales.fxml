<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="vehicles.SalesController">
    <Label layoutX="50" layoutY="30" text="Vehicle ID" />
    <TextField fx:id="vehicleIDField" layoutX="150" layoutY="30" promptText="Masukkan Vehicle ID" />
    <Label layoutX="50" layoutY="80" text="Total Pembelian" />
    <TextField fx:id="totalPembelianField" layoutX="150" layoutY="80" promptText="Total Pembelian" />
    <Label layoutX="50" layoutY="130" text="Tanggal Penjualan" />
    <DatePicker fx:id="saleDatePicker" layoutX="150" layoutY="130" />
    <Button fx:id="btnSimpanPenjualan" layoutX="150" layoutY="180" text="Simpan Penjualan" onAction="#simpanPenjualan" />
    <Button fx:id="btnTampilDataPenjualan" layoutX="300" layoutY="180" text="Tampilkan Data" onAction="#tampilDataPenjualan" />
    <ListView fx:id="listViewPenjualan" layoutX="50" layoutY="250" prefHeight="200" prefWidth="400" />
</AnchorPane>
