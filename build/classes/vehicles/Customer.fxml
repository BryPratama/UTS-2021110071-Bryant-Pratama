<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="vehicles.CustomerController">
    <Label layoutX="250" layoutY="20" text="Data Pelanggan" />
    <Label layoutX="50" layoutY="60" text="ID Pelanggan" />
    <TextField fx:id="customerIDField" layoutX="150" layoutY="60" promptText="Masukkan ID Pelanggan" />
    <Label layoutX="50" layoutY="100" text="Nama" />
    <TextField fx:id="namaField" layoutX="150" layoutY="100" promptText="Masukkan Nama" />
    <Label layoutX="50" layoutY="140" text="Alamat" />
    <TextField fx:id="alamatField" layoutX="150" layoutY="140" promptText="Masukkan Alamat" />
    <Label layoutX="50" layoutY="180" text="Telepon" />
    <TextField fx:id="teleponField" layoutX="150" layoutY="180" promptText="Masukkan Nomor Telepon" />
    <Button fx:id="btnTambahPelanggan" layoutX="50" layoutY="230" text="Tambah Pelanggan" onAction="#tambahklik" />
    <Button fx:id="btnTampilData" layoutX="200" layoutY="230" text="Tampilkan Data" onAction="#tampilklik" />
    <Button fx:id="btnHapusData" layoutX="350" layoutY="230" text="Hapus" onAction="#hapusklik" />
    <ListView fx:id="listViewPelanggan" layoutX="50" layoutY="280" prefHeight="200" prefWidth="400" />
</AnchorPane>
